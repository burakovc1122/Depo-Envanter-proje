@model projebeycelik.Models.Depo

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Depo Silme</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>@Model.Marka - Depo Silme</h2>

        <p>
            <strong>Marka:</strong> @Model.Marka<br />
            <strong>Ürün:</strong> @Model.Product<br />
            <strong>Varlık Durumu:</strong> @Model.AssetState<br />
            <strong>Orijinal Seri Numarası:</strong> @Model.OrgSerialNumber<br />
            <strong>Ürün Tipi:</strong> @Model.ProductType<br />
            <strong>Site:</strong> @Model.Site<br />
            <strong>Ürün Türü:</strong> @Model.UrunTipi<br />
        </p>

        <h4>Silmek istediğinizden emin misiniz?</h4>

        <!-- Silme işlemini onaylayan form -->
        @using (Html.BeginForm("Delete", "Depoenvanter", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" name="id" value="@Model.Id" />

            <button type="submit" class="btn btn-danger">Evet, Sil</button>
            <a href="@Url.Action("Index", "Depoenvanter")" class="btn btn-secondary">Hayır, Geri Dön</a>
        }
    </div>
</body>
</html>
